// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "buffer_line_height": "comfortable",
  "sticky_scroll": {
    "enabled": true
  },
  "disable_ai": false,

  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  "ui_font_family": "Berkeley Mono",
  "ui_font_size": 13,
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_size": 13.0,
  "use_system_window_tabs": true,
  "terminal": {
    "font_family": "Berkeley Mono",
    "font_size": 13
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "edit_predictions": {
    "enabled_in_text_threads": false
  },
  "minimap": {
    "show": "auto"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "git": {
    "git_gutter": "tracked_files",
    "hunk_style": "staged_hollow",
    "inline_blame": {
      "enabled": true,
      "show_commit_summary": false,
      "min_column": 80,
      "delay_ms": 0
    }
  },

  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "file_types": {
    "Go": ["*.go.tmpl"],
    "JSON": ["*.json.tmpl"]
  },
  "wrap_guides": [80, 120],
  "languages": {
    "SQL": {
      "format_on_save": "off"
    },
    "Markdown": {
      "soft_wrap": "bounded"
    },
    "Proto": {
      "format_on_save": "off"
    },
    "GraphQL": {
      "format_on_save": "off"
    },
    "Go": {
      "language_servers": ["gopls"] //, "golangci-lint"]
    },
    "Plain Text": {
      "soft_wrap": "none"
    }
  },
  "diagnostics": {
    "include_warnings": true
  },
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": {
      "control": true
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": false, // Show variable types in assignments
          "compositeLiteralFields": false, // Show field names in composite literals
          "compositeLiteralTypes": false, // Show types in composite literals
          "constantValues": true, // Show constant values inline
          "functionTypeParameters": true, // Show type parameter names in function calls
          "parameterNames": true, // Show parameter names at function call sites
          "rangeVariableTypes": true // Show types of range variables
        },
        // "analyses": {
        //   "S1002": true, // Converts uses of `strings.Compare` to string comparison
        //   "S1005": true, // Checks for unnecessary use of assignment to blank identifier
        //   "S1006": true, // Suggests `for range x` over `for _, _ = range x`
        //   "S1008": true, // Simplifies returning boolean expressions
        //   "S1011": true, // Suggests removing redundant break statements from switch cases
        //   "S1016": true, // Simplifies type switches with a single case
        //   "S1021": true, // Removes redundant type conversions in range clauses
        //   "S1025": true, // Replaces `fmt.Sprintf("%d", x)` with `strconv.Itoa(x)`
        //   "S1029": true, // Suggests using `range x` over `for i := range ...`
        //   "S9003": true, // Empty body in if/else chain
        //   "SA1000": true, // Invalid regular expression patterns
        //   "SA1002": true, // Invalid format strings in printf calls
        //   "SA4005": true, // Identifies dead code after return statements
        //   "SA4006": true, // Checks for inappropriate assignment of parameters
        //   "SA4012": true, // Flags suspicious direct float comparisons
        //   "SA9001": true, // Detects unneeded Printf calls that can be print
        //   "SA9005": true, // Identifies duplicate conditions in if/else chains
        //   "SA9007": true, // Checks for attempts to unmarshal into unexported fields
        //   "ST1000": true, // Checks package documentation conventions
        //   "ST1003": true, // Checks identifier naming conventions
        //   "ST1011": true, // Flags redundant cutset arguments to strings.Trim* functions
        //   "ST1012": true // Verifies error variables naming convention (_err suffix)
        // },
        "buildFlags": ["-tags", "integration,slow"],
        "semanticTokens": true,
        "usePlaceholders": false,
        "gofumpt": true,
        "staticcheck": true,
        "vulncheck": "Imports"
      }
    },
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--out-format=json",
          "--show-stats=false",
          "--issues-exit-code=1",
          "--fast"
          // "--fix"
        ]
      }
    },
    "protobuf-language-server": {
      "binary": {
        "path": "buf",
        "arguments": ["lsp", "serve"]
      }
    }
  },
  "agent": {
    "default_profile": "ask",
    "use_modifier_to_send": true,
    "play_sound_when_agent_done": false,
    "single_file_review": false,
    "always_allow_tool_actions": true,
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    },
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-7-sonnet-latest"
    },
    "profiles": {
      "minimal": {
        "tools": {
          "terminal": true
        },
        "name": "Minimal",
        "enable_all_context_servers": true,
        "context_servers": {
          "Linear": {
            "tools": {
              "update_project": false,
              "update_issue": false,
              "create_project": false,
              "create_issue": false,
              "create_comment": false
            }
          }
        }
      },
      "ask": {
        "tools": {
          "terminal": true,
          "diagnostics": true,
          "thinking": true,
          "read_file": true,
          "now": true,
          "list_directory": true,
          "grep": true,
          "find_path": true,
          "fetch": true
        },
        "name": "Ask",
        "enable_all_context_servers": true,
        "context_servers": {
          "Linear": {
            "tools": {
              "update_project": false,
              "update_issue": false,
              "create_project": false,
              "create_issue": false,
              "create_comment": false
            }
          }
        }
      },
      "write": {
        "tools": {
          "open": true,
          "move_path": true,
          "edit_file": true,
          "create_directory": true,
          "delete_path": false,
          "copy_path": true,
          "terminal": true,
          "diagnostics": true,
          "thinking": true,
          "read_file": true,
          "now": true,
          "list_directory": true,
          "grep": true,
          "find_path": true,
          "fetch": true,
          "write_file": true
        },
        "name": "Write",
        "enable_all_context_servers": true
      }
    }
  },
  "context_servers": {
    "Linear": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.linear.app/sse"]
    },
    "Context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    }
  }
}
